.without-order-card{
  position: relative;
  margin:32rpx 52rpx 0;
  height: 360rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.2);
  border-radius: 13rpx;
}
.without-order-image{
  position: absolute;
  top: 140rpx;
  left: 283rpx;
  height: 80rpx;
  width: 80rpx;
  opacity: 0.4;
}
.without-order-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.4;
  font-weight: bold;
  position: absolute;
  top:250rpx;
  width: 646rpx;
  text-align: center;
}
.line{
  width: 646rpx;
  display: flex;
  margin: 30rpx;
}
.line-black{
  width: 24rpx;
  height:39rpx;
}
.line-text{
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #34373D;
  font-weight: bold;
  opacity: 0.5;
}
.order-list{
  margin:30rpx 15rpx 0;
  border-radius: 13rpx;
}
.product-card{
  position: relative;
  height: 200rpx;
  display: flex;
  background: #FFFFFF; 
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.2);
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}
.product-card:last-child{
  border-bottom: none;
  box-shadow: 0;
}
.product-image{
  margin-left: 20rpx;
  width:200rpx;
  height: 200rpx;
}
.product-info{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.product-name{
  font-size:30rpx;
  line-height:42rpx;
  opacity:0.6;
  font-weight:bold;
  margin-top:20rpx;
  margin-left:20rpx;
}
.product-price{
  margin-left:10rpx;
  margin-top:20rpx;
  font-size:30rpx;
  line-height:42rpx;
  font-weight:bold;
  opacity:0.8;
}
.product-opr{
  display: flex;
  flex-direction: column;
  
}
.product-comment{
  margin:20rpx;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold; 
}
.product-count{
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  opacity: 0.7;
  text-align: right;
  margin-right: 20rpx;
  margin-top: 29rpx;
}