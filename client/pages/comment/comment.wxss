.product-card{
  margin: 20rpx;
  position: relative;
  height: 200rpx;
  display: flex;
  background: #FFFFFF; 
  /* border-bottom: 1px solid rgba(151, 151, 151, 0.2); */
  border-radius: 10rpx;
}
.product-image{
  margin-left: 20rpx;
  width:200rpx;
  height: 200rpx;
}
.product-info{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.product-name{
  font-size:30rpx;
  line-height:42rpx;
  opacity:0.6;
  font-weight:bold;
  margin-top:20rpx;
  margin-left:20rpx;
}
.product-price{
  margin-left:10rpx;
  margin-top:20rpx;
  font-size:30rpx;
  line-height:42rpx;
  font-weight:bold;
  opacity:0.8;
}
.comment-card{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  border: 1rpx solid rgba(0,0,0,0.2);
  border-radius: 10rpx;
  
}
.comment-text{
  width: 710rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.comment-image{
  margin-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.submitBtn{
  width: 300rpx;
  margin-top: 30rpx;
  margin-left: 225rpx;
  line-height: 100rpx;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold; 
}
.submitBtn.dis {
  background: rgba(52, 55, 61, 0.5);
}
